{
  "manifest_version": 2,
  "name": "Brand Kit Dashboard",
  "version": "1.0.0",
  "description": "Customizable new tab dashboard for small businesses with reminders, links, and brand colors",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "https://api.todoist.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}

